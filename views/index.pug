doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Free Slot Finder
    //– Flatpickr
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css")
    //– Your custom styles
    link(rel="stylesheet" href="/styles.css")
  body
    header.header
      h1.site-title Free Slot Finder
      p.logged-in Logged in as #{email}
      form#logoutForm(action="/logout" method="post")
        button(type="submit" class="btn-logout") Logout

    main.container
      form#slotForm.form
        //– Participants
        label Participants
        div#participants.field-group
          input.participant-input(type="email" name="participants" placeholder="Participant email" required)
          button#addParticipant(type="button" class="btn-small") + Add

        //– Date range
        label(for="from") From
        input#from(type="text" name="from" placeholder="Start date & time" required)
        label(for="to") To
        input#to(type="text" name="to" placeholder="End date & time" required)

        button(type="submit" class="btn-primary") Find Slots

      section#slotsContainer.slots

    footer.footer
      p &copy; 2025 Free Slot Finder

    //– Our dynamic script
    script(src="/scripts.js" defer)
    //– Flatpickr client
    script(src="https://cdn.jsdelivr.net/npm/flatpickr" defer)
